@{
    ViewData["Title"] = "Portfolio & Projects";
}

<section class="ftco-section ftco-project" id="projects-section">
    <div class="container">
        <div class="page-title d-none">Portfolio & Projects</div>
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h1 class="big big-2">Projects</h1>
                <h2 class="mb-4">My Projects</h2>
                <p>Projects I've worked on</p>
            </div>
        </div>
        <div class="row">
            @if (ViewBag.Projects != null && ViewBag.Projects.Count > 0)
            {
                @foreach (var project in ViewBag.Projects)
                {
                    <div class="col-md-4">
                        <div class="project img ftco-animate d-flex justify-content-center align-items-center" style="background-image: url(@project.ImageUrl);">
                            <div class="overlay"></div>
                            <div class="text text-center p-4">
                                <h3><a href="@project.ProjectUrl">@project.Title</a></h3>
                                <span>@project.Category</span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No projects available at the moment.</p>
                </div>
            }
        </div>
    </div>
</section> 