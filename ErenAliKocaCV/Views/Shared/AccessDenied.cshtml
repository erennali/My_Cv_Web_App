@{
    ViewData["Title"] = "Erişim Reddedildi";
    Layout = "_Layout";
}

<div class="container error-page">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <div class="error-content">
                <h1 class="error-code">403</h1>
                <h2 class="error-title">Erişim Reddedildi</h2>
                <div class="error-description">
                    <p>Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
                    <p>Erişim için giriş yapmanız veya gerekli izinlere sahip olmanız gerekmektedir.</p>
                </div>
                <div class="error-actions">
                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="fas fa-home"></i> Ana Sayfaya Dön
                    </a>
                    <a href="/Admin/Account/Login" class="btn btn-success btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Giriş Yap
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-page {
        padding: 80px 0;
    }
    .error-code {
        font-size: 120px;
        font-weight: 700;
        color: #f39c12;
        margin-bottom: 0;
    }
    .error-title {
        font-size: 36px;
        margin-bottom: 30px;
        color: #333;
    }
    .error-description {
        font-size: 18px;
        color: #555;
        margin-bottom: 30px;
    }
    .error-actions {
        margin-top: 30px;
    }
    .error-actions .btn {
        margin: 5px;
    }
</style> 