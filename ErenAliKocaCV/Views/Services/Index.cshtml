@{
    ViewData["Title"] = "Professional Services";
    var services = ViewBag.Services as IEnumerable<ErenAliKocaCV.Models.Service>;
}

<section class="ftco-section" id="services-section">
    <div class="container">
        <div class="page-title d-none">Professional Services</div>
        <div class="row justify-content-center py-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h1 class="big big-2">Services</h1>
                <h2 class="mb-4">Services</h2>
                <p>Services I offer</p>
            </div>
        </div>
        <div class="row">
            @if (services != null && services.Any())
            {
                foreach (var service in services)
                {
                    <div class="col-md-4 text-center d-flex ftco-animate">
                        <a href="#" class="services-1">
                            <span class="icon">
                                @if (!string.IsNullOrEmpty(service.IconName) && service.IconName.StartsWith("flaticon-"))
                                {
                                    <i class="@service.IconName"></i>
                                }
                                else if (!string.IsNullOrEmpty(service.IconClass))
                                {
                                    <i class="@service.IconClass"></i>
                                }
                                else
                                {
                                    <i class="flaticon-analysis"></i>
                                }
                            </span>
                            <div class="desc">
                                <h3 class="mb-5">@service.Title</h3>
                                <p>@service.Description</p>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <div class="col-md-4 text-center d-flex ftco-animate">
                    <a href="#" class="services-1">
                        <span class="icon">
                            <i class="flaticon-analysis"></i>
                        </span>
                        <div class="desc">
                            <h3 class="mb-5">Web Development</h3>
                        </div>
                    </a>
                </div>
                <div class="col-md-4 text-center d-flex ftco-animate">
                    <a href="#" class="services-1">
                        <span class="icon">
                            <i class="flaticon-flasks"></i>
                        </span>
                        <div class="desc">
                            <h3 class="mb-5">Mobile App Development</h3>
                        </div>
                    </a>
                </div>
                <div class="col-md-4 text-center d-flex ftco-animate">
                    <a href="#" class="services-1">
                        <span class="icon">
                            <i class="flaticon-ideas"></i>
                        </span>
                        <div class="desc">
                            <h3 class="mb-5">Database Design</h3>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section> 