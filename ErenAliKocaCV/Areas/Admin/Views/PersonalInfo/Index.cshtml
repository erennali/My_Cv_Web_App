@model ErenAliKocaCV.Models.PersonalInfo

@{
    ViewData["Title"] = "Personal Information";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Personal Information</h1>
        <a asp-action="Edit" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit Information
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@Model.FullName</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            @if (!string.IsNullOrEmpty(Model.ProfileImage))
                            {
                                <img src="@Model.ProfileImage" alt="@Model.FullName" class="img-fluid rounded" style="max-height: 300px;" />
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> No profile image uploaded
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Full Name:</dt>
                                <dd class="col-sm-9">@Model.FullName</dd>
                                
                                <dt class="col-sm-3">Title:</dt>
                                <dd class="col-sm-9">@Model.Title</dd>
                                
                                <dt class="col-sm-3">Bio:</dt>
                                <dd class="col-sm-9">@Model.Bio</dd>
                                
                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9">@Model.Email</dd>
                                
                                <dt class="col-sm-3">Phone:</dt>
                                <dd class="col-sm-9">@Model.Phone</dd>
                                
                                <dt class="col-sm-3">Address:</dt>
                                <dd class="col-sm-9">@Model.Address</dd>
                                
                                <dt class="col-sm-3">Website:</dt>
                                <dd class="col-sm-9">@Model.Website</dd>
                                
                                <dt class="col-sm-3">Birth Date:</dt>
                                <dd class="col-sm-9">@(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToShortDateString() : "Not specified")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alert after 5 seconds
        setTimeout(function() {
            $('.alert-dismissible').alert('close');
        }, 5000);
    </script>
} 