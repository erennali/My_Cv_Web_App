@{
    ViewData["Title"] = "Upload CV";
}

<div class="container-fluid">
    <h1 class="mb-4">Upload CV</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Upload your CV in PDF format. This will be available for download on your website.
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label for="cvFile" class="form-label">CV File (PDF only)</label>
                            <input type="file" name="cvFile" id="cvFile" class="form-control" accept=".pdf" required />
                            <span class="text-danger field-validation-error" data-valmsg-for="cvFile"></span>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input type="checkbox" name="isActive" id="isActive" class="form-check-input" checked />
                            <label for="isActive" class="form-check-label">Set as active CV</label>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-upload"></i> Upload
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 