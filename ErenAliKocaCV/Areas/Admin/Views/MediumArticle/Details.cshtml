@model ErenAliKocaCV.Models.MediumArticle

@{
    ViewData["Title"] = "Medium Yazısı Detayları";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Medium Yazısı Detayları</h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Listeye Dön
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Başlık</dt>
                        <dd class="col-sm-9">@Model.Title</dd>
                        
                        <dt class="col-sm-3">Açıklama</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                        
                        <dt class="col-sm-3">Makale URL</dt>
                        <dd class="col-sm-9">
                            <a href="@Model.ArticleUrl" target="_blank">@Model.ArticleUrl</a>
                        </dd>
                        
                        <dt class="col-sm-3">Yayın Tarihi</dt>
                        <dd class="col-sm-9">@Model.PublishedDate.ToString("dd MMMM yyyy")</dd>
                        
                        <dt class="col-sm-3">Sıra</dt>
                        <dd class="col-sm-9">@Model.Order</dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <div class="card">
                            <div class="card-header">Kapak Resmi</div>
                            <div class="card-body text-center">
                                <img src="@Model.CoverImageUrl" alt="@Model.Title" class="img-fluid rounded" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">Kapak resmi mevcut değil</div>
                    }
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fas fa-trash"></i> Sil
            </a>
        </div>
    </div>
</div>