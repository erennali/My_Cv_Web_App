@model ErenAliKocaCV.Models.ContactMessage

@{
    ViewData["Title"] = "Message Details";
}

<div class="container-fluid">
    <h1 class="mb-4">Message Details</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">@Model.Subject</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">From:</dt>
                        <dd class="col-sm-9">@Model.Name &lt;@Model.Email&gt;</dd>
                        
                        <dt class="col-sm-3">Date Sent:</dt>
                        <dd class="col-sm-9">@Model.DateSent.ToString("g")</dd>
                        
                        <dt class="col-sm-3">Subject:</dt>
                        <dd class="col-sm-9">@Model.Subject</dd>
                        
                        <dt class="col-sm-3">Message:</dt>
                        <dd class="col-sm-9">
                            <div class="message-content p-3 bg-light rounded">
                                @Model.Message
                            </div>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger me-2" onclick="return confirm('Are you sure you want to delete this message?')">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-action="Messages" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 