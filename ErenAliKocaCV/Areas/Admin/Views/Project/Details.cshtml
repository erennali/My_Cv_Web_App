@model ErenAliKocaCV.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="container-fluid">
    <h1 class="mb-4">Project Details</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">@Model.Title</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>
                        
                        <dt class="col-sm-3">Category:</dt>
                        <dd class="col-sm-9">@Model.Category</dd>
                        
                        <dt class="col-sm-3">Completion Date:</dt>
                        <dd class="col-sm-9">
                            @(Model.CompletionDate.HasValue ? Model.CompletionDate.Value.ToString("MMM yyyy") : "In Progress")
                        </dd>
                        
                        <dt class="col-sm-3">Client:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Client) ? "N/A" : Model.Client)</dd>
                        
                        <dt class="col-sm-3">URL:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.ProjectUrl))
                            {
                                <a href="@Model.ProjectUrl" target="_blank">@Model.ProjectUrl</a>
                            }
                            else
                            {
                                <span class="text-muted">Not available</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Image URL:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" style="max-height: 200px;" />
                                </div>
                                <small>@Model.ImageUrl</small>
                            }
                            else
                            {
                                <span class="text-muted">No image available</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p>@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted">No description available</p>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 