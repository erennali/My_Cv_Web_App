@model ErenAliKocaCV.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container-fluid">
    <h1 class="mb-4">Delete Project</h1>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> 
                        Are you sure you want to delete this project?
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>
                        
                        <dt class="col-sm-3">Category:</dt>
                        <dd class="col-sm-9">@Model.Category</dd>
                        
                        <dt class="col-sm-3">Client:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Client) ? "N/A" : Model.Client)</dd>
                        
                        <dt class="col-sm-3">Completion Date:</dt>
                        <dd class="col-sm-9">
                            @(Model.CompletionDate.HasValue ? Model.CompletionDate.Value.ToString("MMM yyyy") : "In Progress")
                        </dd>
                    </dl>
                    
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-info-circle"></i> 
                        This action cannot be undone.
                    </div>
                    
                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 