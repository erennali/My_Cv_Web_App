@model ErenAliKocaCV.Models.Experience

@{
    ViewData["Title"] = "Delete Experience";
}

<div class="container-fluid">
    <h1 class="mb-4">Delete Experience</h1>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> 
                        Are you sure you want to delete this experience entry?
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Company:</dt>
                        <dd class="col-sm-9">@Model.Company</dd>
                        
                        <dt class="col-sm-3">Position:</dt>
                        <dd class="col-sm-9">@Model.Position</dd>
                        
                        <dt class="col-sm-3">Period:</dt>
                        <dd class="col-sm-9">
                            @Model.StartDate.ToString("MMM yyyy") - 
                            @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("MMM yyyy") : "Present")
                        </dd>
                    </dl>
                    
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-info-circle"></i> 
                        This action cannot be undone.
                    </div>
                    
                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 