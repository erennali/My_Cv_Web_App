@model ErenAliKocaCV.Models.SiteSettings

@{
    ViewData["Title"] = "Edit Site Settings";
}

<div class="container-fluid">
    <h1 class="mb-4">Edit Site Settings</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-4">
                            <h4>Contact Page Settings</h4>
                            <hr />
                            
                            <div class="form-group mb-3">
                                <label asp-for="ContactImage" class="control-label">Contact Image</label>
                                <div class="input-group">
                                    <input asp-for="ContactImage" class="form-control" />
                                    <input type="file" name="contactImageFile" class="form-control" accept="image/*" />
                                </div>
                                <span asp-validation-for="ContactImage" class="text-danger"></span>
                                <small class="form-text text-muted">Enter URL or upload an image file for the contact page image</small>
                                
                                @if (!string.IsNullOrEmpty(Model.ContactImage))
                                {
                                    <div class="mt-2">
                                        <img src="@Model.ContactImage" class="img-thumbnail" style="max-height: 200px" alt="Current contact image" />
                                        <p>Current contact image</p>
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-save"></i> Save Settings
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Settings
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 